<Window x:Class="TeamPomodoro.UI.AddOrRename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamPomodoro.UI"
		  xmlns:g="clr-namespace:TeamPomodoro.Globalization"
        mc:Ignorable="d"
        Height="170" Width="320"
		  Icon="..\Resources\main.ico"
		  ShowInTaskbar="False"
		  ResizeMode="NoResize"
		  MouseDown="OnMouseDown">
	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<TextBlock Name="name" Grid.Row="0" Text="Description goes here..." Margin="0,0,20,0"
					  VerticalAlignment="Bottom"/>
		<TextBox Name="text" Grid.Row="1" Height="{x:Static local:UiMeasurements.CommonHeight}"
					VerticalContentAlignment="Center"/>
		<Grid Grid.Row="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>
		</Grid>
		<Button Grid.Row="4" Height="{x:Static local:UiMeasurements.CommonHeight}" 
				  MinWidth="60"
				  Padding="15,0,15,0"
				  HorizontalAlignment="Right"
				  VerticalAlignment="Bottom"
				  Click="OnSaveClick"
				  IsDefault="True"
				  Content="{x:Static g:Strings.TxtSave}"/>
	</Grid>
</Window>