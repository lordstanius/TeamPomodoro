<Window x:Class="TeamPomodoro.UI.EditDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamPomodoro.UI"
		  xmlns:g="clr-namespace:TeamPomodoro.Globalization"
        mc:Ignorable="d"
        Title="" Height="180" Width="350"
		  Icon="..\Resources\main.ico"
		  ShowInTaskbar="False"
		  ResizeMode="NoResize"
		  MouseDown="OnMouseDown">
	<Grid Margin="30">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBlock Name="lTitle" Grid.Row="0" Text="{x:Static g:Strings.TxtTeamName}" Margin="0,0,0,10"
					  VerticalAlignment="Bottom"/>
		<TextBox Grid.Row="1" Height="{x:Static local:UiMeasurements.CommonHeight}"
					VerticalContentAlignment="Center"/>
		<Grid Grid.Row="2">
		</Grid>
		<Button Grid.Row="2" Height="{x:Static local:UiMeasurements.CommonHeight}" 
				  MinWidth="60"
				  Padding="15,0,15,0"
				  HorizontalAlignment="Right"
				  VerticalAlignment="Bottom"
				  Content="{x:Static g:Strings.TxtSave}"/>
	</Grid>
</Window>
